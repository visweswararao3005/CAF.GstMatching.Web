        {
            <p>@(responseDict.ContainsKey("msgNoReportData") ? responseDict["msgNoReportData"] : "No report data available.")</p>
        }
    </div>

    <div class="back-button">
        <button class="btn-back" onclick="window.location.href='@Url.Action("ExportReport", "Admin",new { requestNo = ticket?.RequestNo, fileName= @ticket?.FileName, ClientGSTIN = @ticket?.ClientGSTIN })'">Export Comparison Results</button>
